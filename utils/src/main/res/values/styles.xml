<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreenTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColor">@color/md_cyan_700</item>
        <item name="boxStrokeColor">@color/md_cyan_700</item>
        <item name="hintTextColor">@color/md_cyan_700</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>